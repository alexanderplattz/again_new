section.case
	h3
		display block
		text-align center
		font-size 15px
		font-family font-bold
		letter-spacing 0.03em
		margin 20px 10% 20px 10%
		text-transform uppercase

	p
		margin 0 10% 15px 10%
		font-family font-title
		font-size 16px
		line-height 140%

	.title
		clearfix()
		height 450px
		margin-bottom 45px

		.cover
			background color-silver center center no-repeat
			background-size cover
			width 55%
			height 450px
			float left

		.text
			width 45%
			height 450px
			float left
			display table

			.wrap
				padding 6%
				text-align center
				display table-cell
				vertical-align middle
				height 100%

				h2
					font-size 16px

				p
					font-size 34px
					margin-top 15px

	.paragraph
		clearfix()
		margin-bottom 45px
		padding 0 0 0 10%
		box-sizing border-box
		height 50%
		overflow hidden
		display table

		.text
			display table-cell
			vertical-align middle
			width 40%

		.keywords
			width 50%
			display table-cell
			vertical-align middle
			height 100%

			ul
				li
					display block
					text-align center
					font-size 28px
					margin-top 5px

	.photos
		clearfix()
		margin-bottom 45px
		display table

		.photo
			display table-cell
			width 52%
			padding 0 4% 0 2%
			text-align center
			vertical-align middle

			img
				width 100%
				height auto

			&:first-child
				width 48%
				padding-right 2%

	.photo-caption
		clearfix()
		margin-bottom 45px
		display table

		.photo
			display table-cell
			width 68%
			padding 0 1% 0 10%

			img
				width 100%
				height auto

		.text
			display table-cell
			width 32%
			padding 3% 1% 1% 1%
			vertical-align top

			h3
				text-align left

		&.right
			.photo
				padding 0 10% 0 1%

			.text
				text-align right

			h3
				text-align right

	.gallery
		margin-bottom 45px
		padding 0 5% 0 5%
		box-sizing border-box
