section.culture
	clearfix()
	
	.bullets
		position fixed
		right 2%
		top 0
		bottom 0
		width 40px
		z-index 5000
		text-align center

		&:before
			content ''
			display inline-block
			height 100%
			vertical-align middle
			margin-right -0.25em

		.center
			display inline-block
			vertical-align middle

			ul
				li
					a
						display inline-block
						margin 0px
						padding 7px
						text-indent -9000px
						overflow hidden
						text-align center

						span
							display block
							width 12px
							height 12px
							border-radius 12px
							border 1px solid color-main
							transition background .3s cubic-bezier(0.190, 1.000, 0.220, 1.000) //ease-out-expo

						&:hover, &.selected
							span
								background color-main

	.item
		margin-bottom 160px

		h2
			display block
			color color-main
			font-size 23px
			text-align center
			margin-bottom 60px
			font-family font-regular

		p
			display block
			text-align center
			margin-left 8%
			margin-right 8%
			line-height 110%

		p.main
			font-size 90px
			font-family font-thin

		p.quote
			margin-top 200px
			font-size 42px
			margin-left 17%
			margin-right 17%
			line-height 125%

		p.author
			margin-left 50%
			margin-right 10%
			margin-top 42px
			color color-main
			font-family font-title
			font-size 22px
			text-align left