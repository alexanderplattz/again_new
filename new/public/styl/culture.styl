section.culture
	clearfix()
	
	.bullets
		position fixed
		right 1%
		top 0
		bottom 0
		width 40px
		phone width 20px
		z-index 5000
		text-align center

		// &:before
		// 	content ''
		// 	display inline-block
		// 	height 100%
		// 	vertical-align middle
		// 	margin-right -0.25em

		.center
			// display inline-block
			// vertical-align middle

			ul
				li
					a
						display inline-block
						margin 0 0 5px 0
						padding 7px
						phone padding 3px
						text-indent -9000px
						overflow hidden
						text-align center

						span
							display block
							width 12px
							height 12px
							border-radius 12px
							border 1px solid color-main
							transition background .5s cubic-bezier(0.190, 1.000, 0.220, 1.000) //ease-out-expo
							phone width 6px
							phone height 6px

						.canhover &:hover,
						&.selected
							span
								background color-main

	.item
		padding-top 70px
		margin-bottom 100px
		clearfix()

		h2
			display block
			color color-main
			font-size 20px
			text-align center
			margin-bottom 52px
			font-family font-regular
			phone font-size 15px

		p
			display block
			text-align center
			margin-left 6%
			margin-right 6%
			line-height 130%

		p.main
			font-size 70px
			font-family font-thin
			phone font-size 35px

		p.quote
			margin-top 100px
			font-size 34px
			margin-left 17%
			margin-right 17%
			line-height 125%
			phone font-size 17px

		p.author
			margin-left 50%
			margin-right 10%
			margin-top 42px
			color color-main
			font-family font-title
			font-size 18px
			text-align left
			phone font-size 10px